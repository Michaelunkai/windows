 Set-ExecutionPolicy Bypass -Scope Process -Force; $u="https://github.com/ios12checker/Windows-Maintenance-Tool/archive/refs/heads/main.zip"; $d="$env:TEMP\WMT"; New-Item -ItemType Directory -Force -Path $d | Out-Null; Invoke-WebRequest $u -OutFile "$d\wmt.zip"; Expand-Archive "$d\wmt.zip" -DestinationPath $d -Force; $p=(Get-ChildItem $d -Directory | Select-Object -First 1).FullName; Set-Location $p; ./WMT-GUI.ps1
